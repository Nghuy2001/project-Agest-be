generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  candidate
  employer
}

model AccountsUser {
  id        String   @id @default(uuid()) @map("user_id")
  fullName  String   @map("user_full_name")
  email     String   @unique @map("user_email")
  password  String   @map("user_password")
  avatar    String?  @map("user_avatar")
  phone     String?  @map("user_phone")
  role      Role     @default(candidate) @map("user_role")
  createdAt DateTime @default(now()) @map("user_created_at")
  updatedAt DateTime @updatedAt @map("user_updated_at")

  @@map("accounts_user")
}

model AccountCompany {
  id               String   @id @default(uuid()) @map("company_id")
  companyName      String   @map("company_name")
  email            String   @unique @map("company_email")
  password         String   @map("company_password")
  cityId           String?  @map("company_city")
  address          String?  @map("company_address")
  companyModel     String?  @map("company_model")
  companyEmployees String?  @map("company_employees")
  workingTime      String?  @map("company_working_time")
  workOvertime     String?  @map("company_work_overtime")
  phone            String?  @map("company_phone")
  description      String?  @map("company_description")
  logo             String?  @map("company_logo")
  role             Role     @default(employer) @map("company_role")
  createdAt        DateTime @default(now()) @map("company_created_at")
  updatedAt        DateTime @updatedAt @map("company_updated_at")
  city             City?    @relation(fields: [cityId], references: [id])

  jobs Job[]

  @@map("accounts_company")
}

model City {
  id   String @id @default(uuid()) @map("city_id")
  name String @unique @map("city_name")

  companies AccountCompany[]

  @@map("cities")
}

model Job {
  id           String   @id @default(uuid()) @map("job_id")
  companyId    String   @map("job_company_id")
  title        String   @map("job_title")
  salaryMin    Int      @map("job_salary_min")
  salaryMax    Int      @map("job_salary_max")
  position     String?  @map("job_position")
  workingForm  String?  @map("job_working_form")
  technologies String[] @map("job_technologies")
  description  String   @map("job_description")
  images       String[] @map("job_images")

  createdAt DateTime @default(now()) @map("job_created_at")
  updatedAt DateTime @updatedAt @map("job_updated_at")

  company AccountCompany @relation(fields: [companyId], references: [id])

  @@map("jobs")
}
